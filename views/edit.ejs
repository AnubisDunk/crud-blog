<% layout('layouts/boilerplate') %>
    <h1>Edit <%= post._id %>
    </h1>
    <div class="row">
        <div class="col-6">
            <form action="/post/<%= post._id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="post[title]" value="<%= post.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Text:</label>
                    <textarea class="form-control" type="text" id="body" name="post[body]"
                        value="<%= post.body %>"></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3">https://example.com/users/</span>
                        <input type="text" class="form-control" id="image" name="post[image]" value="<%= post.image %>">
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit post</button>
                </div>
            </form>
        </div>
    </div>